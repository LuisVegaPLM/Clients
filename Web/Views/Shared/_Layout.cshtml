            <a style="text-decoration:none;" class="headerLogo smoothScroll">
                <strong style="color:#1b2021">--</strong>
                <div align="center" class="IconUser notify"></div>
                <strong style="color:#1b2021">--</strong>
                @{
                    CountriesUsers x = (CountriesUsers)Session["CountriesUsers"];
                        var _NickName = plm.Users.SingleOrDefault(model => model.UserId == x.userId);
                        <span class="text">Bienvenido @_NickName.Name</span>
                }
            </a>
        </header>
        <div class="sidebar">
            <nav class="mainMenu">
                <ul class="menu">
                    @*
                        El panel debe funcionar dinamicamente para cada módulo.
                        Nota: Si desea agregar mas iconos vaya a la hoja de estilos Layout.css y agrege el nuevo ícono bajo el código que encontrará en la página http://fontawesome.io/icons/
                    *@
                    <li>
                        <a href="@Url.Content("~/Analytics/Index")" style="text-decoration:none" class="smoothScroll zindex">
                            <strong style="color:#1b2021">--</strong>
                            <div align="center" class="IconHome notify"></div>
                            <strong style="color:#1b2021">--</strong><span class="text">Inicio</span>
                        </a>
                    </li>
                    <li class="_closesession">
                        <a style="text-decoration:none" class="smoothScroll" href="@Url.Content("~/Login/Logout")" title="Get a home">
                            <strong style="color:#1b2021">--</strong>
                            <div align="center" class="IconOut notify"></div>
                            <strong style="color:#1b2021">--</strong><span class="text">Cerrar sesión</span>
                        </a>
                    </li>
                </ul>
            </nav>
            @*<nav class="backToTop">
